{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/src/*"]
    },

    "outDir": "./dist",
    "rootDir": "./"
  }
}
